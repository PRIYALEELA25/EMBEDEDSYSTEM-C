#include <stdint.h>

#include "STM32_F446XX.h"
#include "STM32_GPIODRIVER.h"

void delay(void)
{
    for(uint32_t i = 0; i < 250000; i++);
}

int main(void)
{
    GPIO_Handle_t GpioLed1, GpioLed2;

    /* ================= LED1 Configuration (PA6) ================= */

    GpioLed1.pGPIOx = GPIOA;
    GpioLed1.GPIO_PinConfig.GPIO_PinNumber = GPIO_PIN_NO_6;
    GpioLed1.GPIO_PinConfig.GPIO_PinMode = GPIO_MODE_OUT;
    GpioLed1.GPIO_PinConfig.GPIO_PinSpeed = GPIO_SPEED_FAST;
    GpioLed1.GPIO_PinConfig.GPIO_PinOPType =  GPIO_OTYPE_PUSHPULL;
    GpioLed1.GPIO_PinConfig.GPIO_PinPuPdControl = GPIO_PUPDR_NO_PULL_UP ;

    GPIO_PeriClockControl(GPIOA, ENABLE);
    GPIO_Init(&GpioLed1);

    /* ================= LED2 Configuration (PA7) ================= */

    GpioLed2.pGPIOx = GPIOA;
    GpioLed2.GPIO_PinConfig.GPIO_PinNumber = GPIO_PIN_NO_7;
    GpioLed2.GPIO_PinConfig.GPIO_PinMode = GPIO_MODE_OUT;
    GpioLed2.GPIO_PinConfig.GPIO_PinSpeed = GPIO_SPEED_FAST;
    GpioLed2.GPIO_PinConfig.GPIO_PinOPType = GPIO_OP_TYPE_PP;
    GpioLed2.GPIO_PinConfig.GPIO_PinPuPdControl = GPIO_PUPDR_NO_PULL_UP ;

    GPIO_Init(&GpioLed2);

    /* ================= Infinite Loop ================= */

    while(1)
    {
        // LED1 ON, LED2 OFF
    	GPIO_WRITETOOUTPUTPIN(GPIOA, GPIO_PIN_NO_6, SET);
    	GPIO_WRITETOOUTPUTPIN(GPIOA, GPIO_PIN_NO_7, RESET);
        delay();

        // LED1 OFF, LED2 ON
        GPIO_WRITETOOUTPUTPIN(GPIOA, GPIO_PIN_NO_6, RESET);
        GPIO_WRITETOOUTPUTPIN(GPIOA, GPIO_PIN_NO_7, SET);
        delay();
    }

    return 0;
}
